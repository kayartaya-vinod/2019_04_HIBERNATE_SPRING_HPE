<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/DB20190422</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">false</property>
		<property name="format_sql">true</property>
		
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		
		<mapping class="training.entity.Person" />
		<mapping class="training.entity.Product" />
		<mapping class="training.entity.Category" />
		<mapping class="training.entity.Supplier" />
		<mapping class="training.entity.Employee" />
		<mapping class="training.entity.Customer" />
		<mapping class="training.entity.Order" />
		<mapping class="training.entity.LineItem" />
		<mapping class="training.entity.Shipper" />
		<mapping class="training.entity.Laptop" />
		
		
		<mapping class="training.entity.Human" />
		<mapping class="training.entity.Student" />
		<mapping class="training.entity.Professor" />
		
	</session-factory>
</hibernate-configuration>